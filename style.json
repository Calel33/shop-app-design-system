{
  "designSystem": {
    "meta": {
      "name": "Cal Design System",
      "version": "1.0",
      "grid": "8pt spacing system"
    },

    "spacing": {
      "scale": [0, 4, 8, 12, 16, 24, 32, 40, 48, 56, 64, 80, 96, 112]
    },

    "typography": {
      "fonts": {
        "sans": "Anek Latin, ui-sans-serif, sans-serif, system-ui",
        "serif": "Andada Pro, ui-serif, serif",
        "mono": "Sometype Mono, ui-monospace, monospace"
      },

      "scale": {
        "h1": { "size": 32, "lineHeight": 40 },
        "h2": { "size": 24, "lineHeight": 32 },
        "h3": { "size": 18, "lineHeight": 24 },
        "body": { "size": 16, "lineHeight": 22 },
        "small": { "size": 14, "lineHeight": 20 }
      }
    },

    "radius": {
      "base": "1rem",
      "sm": "calc(1rem - 4px)",
      "md": "calc(1rem - 2px)",
      "lg": "1rem",
      "xl": "calc(1rem + 4px)"
    },

    "shadows": {
      "2xs": "0px 0px 0px 0px hsl(0 0% 10% / 0.03)",
      "xs": "0px 0px 0px 0px hsl(0 0% 10% / 0.03)",
      "sm": "0px 0px 0px 0px hsl(0 0% 10% / 0.05), 0px 1px 2px -1px hsl(0 0% 10% / 0.05)",
      "default": "0px 0px 0px 0px hsl(0 0% 10% / 0.05), 0px 1px 2px -1px hsl(0 0% 10% / 0.05)",
      "md": "0px 0px 0px 0px hsl(0 0% 10% / 0.05), 0px 2px 4px -1px hsl(0 0% 10% / 0.05)",
      "lg": "0px 0px 0px 0px hsl(0 0% 10% / 0.05), 0px 4px 6px -1px hsl(0 0% 10% / 0.05)",
      "xl": "0px 0px 0px 0px hsl(0 0% 10% / 0.05), 0px 8px 10px -1px hsl(0 0% 10% / 0.05)",
      "2xl": "0px 0px 0px 0px hsl(0 0% 10% / 0.13)"
    },

    "themes": {
      "light": {
        "primary": {
          "DEFAULT": "rgb(79, 70, 229)",
          "foreground": "rgb(255, 255, 255)"
        },
        "secondary": {
          "DEFAULT": "rgb(20, 184, 166)",
          "foreground": "rgb(255, 255, 255)"
        },
        "accent": {
          "DEFAULT": "rgb(245, 158, 11)",
          "foreground": "rgb(0, 0, 0)"
        },
        "base": {
          "background": "rgb(247, 249, 243)",
          "foreground": "rgb(0, 0, 0)"
        },
        "card": {
          "DEFAULT": "rgb(255, 255, 255)",
          "foreground": "rgb(0, 0, 0)"
        },
        "popover": {
          "DEFAULT": "rgb(255, 255, 255)",
          "foreground": "rgb(0, 0, 0)"
        },
        "muted": {
          "DEFAULT": "rgb(240, 240, 240)",
          "foreground": "rgb(51, 51, 51)"
        },
        "destructive": {
          "DEFAULT": "rgb(239, 68, 68)",
          "foreground": "rgb(255, 255, 255)"
        },
        "border": {
          "DEFAULT": "rgb(0, 0, 0)",
          "input": "rgb(115, 115, 115)"
        },
        "ring": "rgb(165, 180, 252)",
        "chart": {
          "1": "rgb(79, 70, 229)",
          "2": "rgb(20, 184, 166)",
          "3": "rgb(245, 158, 11)",
          "4": "rgb(236, 72, 153)",
          "5": "rgb(34, 197, 94)"
        },
        "sidebar": {
          "DEFAULT": "rgb(247, 249, 243)",
          "foreground": "rgb(0, 0, 0)",
          "primary": "rgb(79, 70, 229)",
          "primaryForeground": "rgb(255, 255, 255)",
          "accent": "rgb(245, 158, 11)",
          "accentForeground": "rgb(0, 0, 0)",
          "border": "rgb(0, 0, 0)",
          "ring": "rgb(165, 180, 252)"
        }
      },

      "dark": {
        "primary": {
          "DEFAULT": "rgb(129, 140, 248)",
          "foreground": "rgb(0, 0, 0)"
        },
        "secondary": {
          "DEFAULT": "rgb(45, 212, 191)",
          "foreground": "rgb(0, 0, 0)"
        },
        "accent": {
          "DEFAULT": "rgb(252, 211, 77)",
          "foreground": "rgb(0, 0, 0)"
        },
        "base": {
          "background": "rgb(0, 0, 0)",
          "foreground": "rgb(255, 255, 255)"
        },
        "card": {
          "DEFAULT": "rgb(26, 33, 43)",
          "foreground": "rgb(255, 255, 255)"
        },
        "popover": {
          "DEFAULT": "rgb(26, 33, 43)",
          "foreground": "rgb(255, 255, 255)"
        },
        "muted": {
          "DEFAULT": "rgb(51, 51, 51)",
          "foreground": "rgb(204, 204, 204)"
        },
        "destructive": {
          "DEFAULT": "rgb(248, 113, 113)",
          "foreground": "rgb(0, 0, 0)"
        },
        "border": {
          "DEFAULT": "rgb(84, 84, 84)",
          "input": "rgb(255, 255, 255)"
        },
        "ring": "rgb(129, 140, 248)",
        "chart": {
          "1": "rgb(129, 140, 248)",
          "2": "rgb(45, 212, 191)",
          "3": "rgb(252, 211, 77)",
          "4": "rgb(244, 114, 182)",
          "5": "rgb(74, 222, 128)"
        },
        "sidebar": {
          "DEFAULT": "rgb(0, 0, 0)",
          "foreground": "rgb(255, 255, 255)",
          "primary": "rgb(129, 140, 248)",
          "primaryForeground": "rgb(0, 0, 0)",
          "accent": "rgb(252, 211, 77)",
          "accentForeground": "rgb(0, 0, 0)",
          "border": "rgb(255, 255, 255)",
          "ring": "rgb(129, 140, 248)"
        }
      }
    }
  }
}
